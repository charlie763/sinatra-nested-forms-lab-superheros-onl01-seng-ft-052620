<form method="POST" action="/teams">
  <h2>Create a Team and Heroes!</h2>
  <label>Team Name: </label><input type="text" name="team[name]"></br>
  <label>Team Motto: </label><input type="text" name="team[motto]"></br>

  <% (1..3).each do |num|%>
    <h3>Hero <%= num%></h3>
    <label>Hero's Name: </label><input type="text" id="member<%= num%>_name" name="team[heroes][][name]"></br>
    <label>Hero's Power: </label><input type="text" id="member<%= num%>_power" name="team[heroes][][power]"></br>
    <label>Hero's Biography: </label><input type="text" id="member<%= num%>_bio" name="team[heroes][][bio]"></br>
  <% end %>

<% if false %>
   <h3>Hero 2</h3>
   <label>Hero's Name: </label><input type="text" id="member2_name" name="team[heroes][][name]"></br>
   <label>Hero's Power: </label><input type="text" id="member2_power" name="team[heroes][][power]"></br>
   <label>Hero's Biography: </label><input type="text" id="member2_bio" name="team[heroes][][bio]"></br>

   <h3>Hero 3</h3>
   <label>Hero's Name: </label><input type="text" id="member3_name" name="team[heroes][][name]"></br>
   <label>Hero's Power: </label><input type="text" id="member3_power" name="team[heroes][][power]"></br>
   <label>Hero's Biography: </label><input type="text" id="member3_bio" name="team[heroes][][bio]"></br>
<% end %>

  <button type="submit">submit</button>
</form>



